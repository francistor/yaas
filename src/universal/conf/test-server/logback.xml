<configuration debug="false" scan="true">
	<appender name="default-file-appender" class="ch.qos.logback.core.FileAppender">
	    <file>log/aaa_${instance:-default}.log</file>
	    <encoder>
      		<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    	</encoder>
	</appender>

	<appender name="default-console-appender" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
      		<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    	</encoder>
	</appender>
	
	<appender name="peer-appender" class="ch.qos.logback.core.FileAppender">
	    <file>log/peer_${instance:-default}.log</file>
	    <encoder>
      		<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    	</encoder>
	</appender>
	
	<appender name="ignite-appender" class="ch.qos.logback.core.FileAppender">
	    <file>log/ignite_${instance:-default}.log</file>
	    <encoder>
      		<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    	</encoder>
	</appender>

	<root level="WARN">          
    	<appender-ref ref="default-console-appender" />
    	<appender-ref ref="default-file-appender" />
  	</root>
  	
  	<logger name="yaas" level="DEBUG" additivity="false">
  		<!-- 
    	<appender-ref ref="default-console-appender" />
    	-->
    	<appender-ref ref="default-file-appender" />
  	</logger>

  	<logger name="yaas.server.DiameterPeer" level="DEBUG" additivity="false">
  		<appender-ref ref="peer-appender" />
  	</logger>
  	
  	<logger name="org.apache.ignite" level="WARN" additivity="false">
  		<appender-ref ref="default-console-appender" />
  		<appender-ref ref="ignite-appender" />
  	</logger>
  	
  	
  	<!-- CDR CONFIGURATION -->
  	<!-- Rolling takes place each minute, not live! -->
	<appender name="cdr-appender" class="ch.qos.logback.core.rolling.RollingFileAppender">
	    <file>cdr/current.txt</file>
	    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
          <fileNamePattern>cdr/cdr_%d{yyyyMMdd-hhmm}.log</fileNamePattern>
        </rollingPolicy>
	    <encoder>
      		<pattern>%msg%n</pattern>
    	</encoder>
	</appender>
	
  	<logger name="acct.cdr" level="INFO" additivity="false">
  		<appender-ref ref="cdr-appender" />
  	</logger>
</configuration>

